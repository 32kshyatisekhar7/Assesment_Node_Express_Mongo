  "paths": {
    "/user/userRegister": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create new user in system",
        "parameters": [{
          "name": "Content-Type",
          "in": "header",
          "required": true,
          "description": "Provide the content type",
          "type": "string"
        },{
          "name": "name",
          "in": "body",
          "description": "User's Name",
          "required": true,
          "type": "string",
          "minlength":1
        },
        {
          "name": "email",
          "in": "body",
          "description": "User's Email",
          "required": true,
          "type": "string"
        },
        {
          "name": "password",
          "in": "body",
          "description": "User's Password",
          "required": true,
          "type": "string"
        },
        {
          "name": "address",
          "in": "body",
          "description": "User's Addresss",
          "required": true,
          "type": "string"
        },
        {
          "name": "phone",
          "in": "body",
          "description": "User's Mobile Number",
          "required": true,
          "type": "Number"
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "You are successfully registered",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/user/userLogin": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Create new log for each new login in system",
        "parameters": [{
          "name": "email",
          "in": "body",
          "required": true,
          "description": "Enter the Email Address",
          "type": "string"
        },
        {
          "name": "password",
          "in": "body",
          "required": true,
          "description": "Enter the Password",
          "type": "string"
        }],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Response is a token",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },

    "/user/userLogout": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      }],
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Log out to the user",
        "responses": {
          "200": {
            "description": "You are successfully logout!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/blog/addBlog": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      }, {
        "name": "name",
        "in": "body",
        "required": true,
        "description": "Name of new blog",
        "type": "string"
      },
      {
        "name": "description",
        "in": "body",
        "required": true,
        "description": "description is all about blog",
        "type": "string"
      }
    ],
      "post": {
        "tags": [
          "Blogs"
        ],
        "summary": "Log out to the user",
        "responses": {
          "200": {
            "description": "Your blog has been successfully saved!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/blog/editBlog": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      },{
        "name": "id",
        "in": "path",
        "required": true,
        "description": "ID of Blog that we want to edit",
        "type": "string"
      }],
      "put": {
        "tags": [
          "Blogs"
        ],
        "summary": "Log out to the user",
        "responses": {
          "200": {
            "description": "Your blog has been successfully updated!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/blog/deleteBlog": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      },{
        "name": "id",
        "in": "path",
        "required": true,
        "description": "ID of blog that we want to remove",
        "type": "string"
      }],
      "delete": {
        "tags": [
          "Blogs"
        ],
        "summary": "Delete the blog by id",
        "responses": {
          "200": {
            "description": "Your blog has been removed!",
            "schema": {
              "$ref": "#/definitions/Blogs"
            }
          }
        }
      }
    },
    "/blog/getAllBlog": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      }],
      "get": {
        "tags": [
          "Blogs"
        ],
        "summary": "Get all the blogs",
        "responses": {
          "200": {
            "description":{
              "data": [
                  {
                      "_id": "5c6d622bcfce2d1d18f0319c",
