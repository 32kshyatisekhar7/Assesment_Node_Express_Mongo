                      "__v": 0
                  } ]
          },
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/comment/addComment": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      },
      {
        "name": "blogId",
        "in": "body",
        "required": true,
        "description": "Blog Id is for the Blog reference",
        "type": "string"
      },
      {
        "name": "description",
        "in": "body",
        "required": true,
        "description": "description is all about comments",
        "type": "string"
      }
    ],
      "post": {
        "tags": [
          "Comments"
        ],
        "summary": "Add new comment on a specific blog",
        "responses": {
          "200": {
            "description": "Your comment has been successfully added!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/comment/editComment": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      },{
        "name": "id",
        "in": "path",
        "required": true,
        "description": "Comment Id is for editing the comment",
        "type": "string"
      }],
      "put": {
        "tags": [
          "Comments"
        ],
        "summary": "Edit the specified comments",
        "responses": {
          "200": {
            "description": "Your comment has been successfully updated!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/comment/deleteComment": {
      "parameters": [{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      },{
        "name": "id",
        "in": "path",
        "required": true,
        "description": "Comment Id is for remove it",
        "type": "string"
      }],
      "delete": {
        "tags": [
          "Comments"
        ],
        "summary": "Remove the specified comments",
        "responses": {
          "200": {
            "description": "You are successfully logout!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/comment/addLikeDislike": {
      "parameters": [{
        "name": "id",
        "in": "path",
        "required": true,
        "description": "Comment Id is for adding the count",
        "type": "string"
      },{
        "name": "x-auth",
        "in": "header",
        "required": true,
        "description": "X-auth is the access token",
        "type": "string"
      },{
        "name": "isLike",
        "in": "body",
        "description": "Should be boolean-True/False",
        "required": true,
        "type": "Boolean"
      }],
      "post": {
        "tags": [
          "Comments"
        ],
        "summary": "Add like or dislike to the comments for blogs",
        "responses": {
          "200": {
            "description": "You are successfully logout!",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User Details": {
      "required": [
        "name",
        "email",
        "password",
        "phone",
        "address"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string",
          "maxlength": 10,
          "minlength": 10
        },
        "address": {
          "type": "string"
        }
      }
    },
    "Login Log": {
      "required": [
        "email",
        "password",
        "tokens.token",
        "tokens.access"
      ],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "tokens": [{
          "access": {
            "type": "String"
          },
          "token": {
            "type": "String"
          }
        }]
      }
    },
    "Blog Details": {
      "required": [
        "name",
        "description",
        "creatorId"
      ],
      "properties": {
        "name": {
          "type": "String",
          "unique": true,
          "minlength": 1
        },
        "description": {
          "type": "String",
          "minlength": 1,
          "maxlength": 500
        },
        "creatorId": {
          "type": "String"
        }
      }
    },
    "Comment": {
      "required": [
        "description",
        "userId",
        "blogId"
      ],
      "properties": {
        "description": {
          "type": "String",
          "unique": true,
          "minlength": 1,
          "maxlength": 500
        },
        "userId": {
          "type": "String"
        },
        "blogId": {
          "type": "String"
        },
        "totalLikeCount": {
          "type": "Number"
        },
        "totalDislikeCount": {
          "type": "Number"
        }
      }
    }
  }
}
